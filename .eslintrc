{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "commonjs": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 4],
    "quotes": [
      "error",
      "single", // double 双引号语句结尾或backtick
      {
        "allowTemplateLiterals": true
      }
    ],
    // "semi": [2, "always"],// 强制语句使用分号结尾
    "semi": ["error", "never"]
  }
}
